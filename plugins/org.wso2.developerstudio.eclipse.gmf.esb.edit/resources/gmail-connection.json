{
    "connectorName": "gmail",
    "connectionName": "GMAIL_CONNECTION",
    "displayName": "GMAIL Connection",
    "help": "<h1>GMAIL Connector</h1> <b>The Gmail API uses OAuth2 authentication with Tokens</b>",
    "elements": [
        {
            "type": "attribute",
            "value": {
                "name": "connectionName",
                "displayName": "Connection Name",
                "type": "string",
                "default": "GMAIL_CONNECTION_1",
                "required": "true",
                "helpTip": "The name for the Gmail connection",
                "validation": "nameWithoutSpecialCharactors"
            }
        },
        {
            "type": "attributeGroup",
            "value": {
                "groupName": "General",
                "elements": [
                    {
                        "type": "attributeGroup",
                        "value": {
                            "groupName": "Basic",
                            "elements": [
                                {
                                    "type": "attribute",
                                    "value": {
                                        "name": "accessToken",
                                        "displayName": "Access Token",
                                        "type": "stringOrExpresion",
                                        "default": "",
                                        "required": "true",
                                        "helpTip": "Value of the Access Token to access the Gmail REST API"
                                    }
                                },
                                {
                                    "type": "attribute",
                                    "value": {
                                        "name": "refreshToken",
                                        "displayName": "Refresh Token",
                                        "type": "stringOrExpresion",
                                        "default": "",
                                        "required": "true",
                                        "helpTip": "Value of the Refresh Token, which generates a new Access Token when the previous one gets expired"
                                    }
                                },
                                {
                                    "type": "attribute",
                                    "value": {
                                        "name": "apiUrl",
                                        "displayName": "API URL",
                                        "type": "stringOrExpresion",
                                        "default": "https://www.googleapis.com/gmail",
                                        "required": "true",
                                        "helpTip": "The API URL of Gmail (https://www.googleapis.com/gmail)"
                                    }
                                },
                                {
                                    "type": "attribute",
                                    "value": {
                                        "name": "userId",
                                        "displayName": "User ID",
                                        "type": "stringOrExpresion",
                                        "default": "",
                                        "placeholder": "someone@example.com",
                                        "required": "true",
                                        "helpTip": "The API URL of Gmail (https://www.googleapis.com/gmail)",
                                        "validation": "email"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "attributeGroup",
            "value": {
                "groupName": "Advanced",
                "elements": [
                    {
                        "type": "attribute",
                        "value": {
                            "name": "clientSecret",
                            "displayName": "Client Secrets",
                            "type": "stringOrExpresion",
                            "default": "",
                            "required": "true",
                            "helpTip":"Value of the Client Secret you obtained when you registered your application with the Gmail API"
                        }
                    },
                    {
                        "type": "attribute",
                        "value": {
                            "name": "clientId",
                            "displayName": "Client ID",
                            "type": "stringOrExpresion",
                            "default": "",
                            "required": "true",
                            "helpTip":"Value of the Client ID you obtained when you registered your application with Gmail API"
                        }
                    },
                    {
                        "type": "attribute",
                        "value": {
                            "name": "registryPath",
                            "displayName": "Registry Path",
                            "type": "stringOrExpresion",
                            "default": "",
                            "required": "true",
                            "helpTip":"Registry Path of the connector where the Access Token will be stored (if not provided, the connector stores the Access Token in the connectors/Gmail/accessToken Registry Path)"
                        }
                    }]
            }
        }
    ]
}